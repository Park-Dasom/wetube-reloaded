mixin video(video)
    a(href=`/videos/${video.id}`).video_grid 
        div.video_grid_thumb(style=`background-image:url(${"/" + video.thumbnailUrl});background-size:cover;background-position:center;`)
        div.video_grid_data
            span.video_grid_title=video.title
            div.video_grid_meta
                span #{video.owner.name || user.name} • 
                span #{video.meta.views}회